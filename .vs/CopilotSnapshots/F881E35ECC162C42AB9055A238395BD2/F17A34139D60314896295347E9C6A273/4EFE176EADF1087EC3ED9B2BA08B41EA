using Restaurant.Core.Models;
using System;
using System.Collections.Generic;
using System.Text;
using System.Threading.Tasks;

namespace Resataraunt.BLL.Interfaces
{
    public interface IOrderService
    {
        Task<List<Order>> GetOrdersAsync();
        Task AddOrdersAsync();
        Task RemoveOrderAsync();
        Task<List<Order>> GetOrdersByDatesIntervalAsync(int startDate, int endDate);
        Task<List<Order>> GetOrderByDateAsync(int date);
        Task<List<Order>> GetOrdersByPriceIntervalAsync(decimal minPrice, decimal maxPrice);
        Task<List<Order>> GetOrdersByNoAsync();
    }
}
