using Restaurant.Core.Models;
using System;
using System.Collections.Generic;
using System.Text;
using System.Threading.Tasks;

namespace Resataraunt.BLL.Interfaces
{
    public interface IOrderService
    {
        Task<List<Order>> GetOrdersAsync();
        Task AddOrdersAsync();
        Task RemoveOrderAsync();
        Task<List<Order>> GetOrdersByDatesIntervalAsync();
        Task<List<Order>> GetOrderByDateAsync();
        Task<List<Order>> GetOrdersByPriceIntervalAsync();
        Task<List<Order>> GetOrdersByNoAsync();
    }
}
